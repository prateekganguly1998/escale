<%- include('header'); -%>
<main>
    <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>
                <div class="card mx-2 my-4" style="width: 18rem;display:inline-flex;height: 32em;">
                    <img style="height: 250px;" class="card-img-top"src="<%= product.imageUrl %>" alt="<%= product.title %>">
                    <div class="card-body">
                        <header class="card-title">
                            <h4 class="product__title">
                                <%= product.title %>
                            </h4>
                        </header>
                        <div class="card-text">
                            <h2 class="product__price">â‚¹
                                <%= product.price %>
                            </h2>
                            <p class="product__description">
                                <b>Description:</b><%= product.description %>
                            </p>
                           
                        </div>
                        <!-- <div class="card__actions">
                            <a href="/admin/edit-product/<%=product._id%>?edit=true" class="btn btn-lg btn-warning">Edit</a>
    
                                <input type="hidden" value="<%=product._id%>" name="productId">
                                <input type="hidden" value="<%=csrfToken%>" name="_csrf">
    
                                <button class="btn btn-lg btn-danger" type="button" onclick="deleteProduct(this)">Delete</button>
    
    
                        </div> -->
                    </div>
                   <div class="card-footer text-muted">
                    <p class="card-text">
                        Seller:  <%= product.userId.username %>
                        <br>
                        Business Id:  <%= product.businessId %>
                      </p>
                      
                   </div>
                   
                       
                
                   
                </div>
            <% } %>
        </div>
    <% } else { %>
        <div class="card">
<div class="card-body">
    <div role="main" class="inner cover">
        <h1 class="cover-heading">No Products Found.</h1>
        <p class="lead">You might want to add some products to begin with.</p>
        <p class="lead">
          <a href="/add-product" class="btn btn-lg btn-secondary">Add here</a>
        </p>
      </div>
</div>
        </div>
       
    <% } %>
</main>

<%- include('scripts'); -%>
</body>

</html>