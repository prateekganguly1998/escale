<%- include('header'); -%>
<div class="container">
   
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            
          <div class="card-body">
          
            <h5 class="card-title text-center">Sign In</h5>
            <% if(errorMessage){%>
                <div class="alert alert-danger"><%=errorMessage%></div>
                <%}%>
            <form class="form-signin" action="/login" method="POST">
              <div class="form-label-group">
                <input class="<%=validationErrors.find(e=>e.param==='email')?'invalid':''%> form-control"
                    type="email" name="email" id="email" value="<%=oldInput.email%>" required>
                <label for="email">Email address</label>
              </div>

              <div class="form-label-group">
                 <input class="<%=validationErrors.find(e=>e.param==='password')?'invalid':''%> form-control"
                   type="password" name="password" id="password" value="<%=oldInput.password%>" required>
                <label for="password">Password</label>
              </div>
              <input type="hidden" name="_csrf" value="<%=csrfToken%>">
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
         </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('scripts'); -%>
</body>

</html>